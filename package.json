{
  "name": "chaterm",
  "version": "0.8.0",
  "description": "AI Terminal with Claude",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "cross-env NODE_ENV=production electron-vite build",
    "build:cn": "cross-env NODE_ENV=production electron-vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:win:cn": "npm run build:cn && electron-builder --win --config electron-builder.cn.yml",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.chaterm.app",
    "productName": "ChatTerm-CN",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tanlongtruong7-star/AI-Terminal-with-Claude.git"
  },
  "dependencies": {
    "ant-design-vue": "^4.2.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "2.3.0",
    "vite": "4.5.3",
    "cross-env": "^7.0.3",
    "@vitejs/plugin-vue": "^4.6.2",
    "unplugin-vue-components": "^0.27.0",
    "unplugin-auto-import": "^0.17.5",
	"@electron-toolkit/tsconfig": "^1.0.1"
  }
}
